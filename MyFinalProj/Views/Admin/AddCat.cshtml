@model MyFinalProj.Models.Category;
<h2>Add Category</h2>

<div class="container m-1">
    <form asp-action="AddCat" method="post" asp-controller="Admin">
        <div asp-validation-summary="All" class="text-danger container">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryName"></label>

                </div>
                <div class="col">
                    <input asp-for="CategoryName" />
                </div>
                <div class="w-100"></div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <button type="submit">Add Category</button>
            </div>
        </div>
    </form>
    <a class="btn btn-sm btn-primary" asp-action="Index">Admin Page</a>
</div>