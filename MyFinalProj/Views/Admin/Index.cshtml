<h1>Admin Page</h1>
<h3>Items And Categories</h3>

<div class="container p-1 m-1">
    <div class="row">
        <div class="col-2">
            <p class="justify-content-center align-items-center">
                <a asp-action="AddItem">
                    <img src="~/files/Add.png" width="150" class="img-thumbnail">
                    Add Item
                </a>

            </p>

        </div>
        <div class="col-2">
            <p class="justify-content-center align-items-center">
                <a asp-action="ListItem" class="text-center">
                    <img src="~/files/Edit.png" width="150" class="img-thumbnail">
                    Edit/Delete Item
                </a>
            </p>
        </div>
        <div class="col-2">
            <p>
                <a asp-action="AddCat">
                    <img src="~/files/Categories.svg" width="150" class="img-thumbnail">
                    Add Category
                </a>
            </p>
        </div>
        <div class="col-2">
            <p>
                <a asp-action="ListCat">
                    <img src="~/files/Categories.svg" width="150" class="img-thumbnail">
                    Edit/Delete Cat
                </a>
            </p>
        </div>
        <div class="w-100"></div>
    </div>
</div>
<h3>Sellers</h3>
<div class="container m-1">
    <div class="row">
        <div class="col-2">
            <p>
                <a asp-action="AddSeller">
                    <img src="~/files/Seller.png" width="150" class="img-thumbnail">
                    Add Seller
                </a>
            </p>
        </div>
        <div class="col-2">
            <p>
                <a asp-action="ListSeller">
                    <img src="~/files/Seller.png" width="150" class="img-thumbnail">
                    Edit/Delete Seller
                </a>
            </p>
        </div>
    </div>
</div>
<h3>Roles</h3>
<div class="container m-1">
    <div class="row">
        <div class="col-2">
            <p>
                <a asp-controller="Roles" asp-action="Index">

                    <img src="~/files/Roles.png" width="150" class="img-thumbnail" />Roles
                </a>
            </p>
        </div>
    </div>
</div>
